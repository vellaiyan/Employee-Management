<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-mapping>
    <class table = "employee" name = "com.ideas2it.model.Employee">
    
        <meta attribute = "class-description"> </meta>

        <id name = "employeeId" column = "employee_id">
            <generator class="native"/>
        </id>

        <property name = "batch" column = "batch" />
        <property name = "firstName" column = "first_name" />
        <property name = "subject" column = "subject"/>
        <property name = "gender" column = "gender"/>
        <property name = "dateOfBirth" column = "dob" />
        <property name = "dateOfJoining" column = "joining_date"/>
        <property name = "emailId" column = "email" />
        <property name = "mobileNumber" column = "mobile_no" />
        <property name = "createDate" column = "created_date"/>
        <property name = "modifiedDate" column = "modified_date"/>
        <property name = "role" column = "role"/>
        <property name = "status" column = "status"/>

        <bag name = "roles" cascade = "all" table = "employee_role" fetch = "select">
            <key column = "employee_id"/>
            <many-to-many column = "role_id" class = "com.ideas2it.model.Role"/>
        </bag>
    </class>
</hibernate-mapping>